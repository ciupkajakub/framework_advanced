<div id="<%= dom_id pizza %>">
  <p>
    <strong>Name:</strong>
    <%= pizza.name %>
  </p>

  <p>
    <strong>Vegan:</strong>
    <%= pizza.vegan %>
  </p>

  <ul>
    <% pizza.ingredients.each do |ingredient| %>
      <%# cache(ingredient) do %>
      <%= render ingredient %>
      <%# end %>
    <% end %>
  </ul>
</div>
